<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Core.Views.MenuPage">

    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout BackgroundColor="Silver" Padding="20">
                <Button Text="Go Test 1" 
                              TextColor="White"
                              BackgroundColor="Red" 
                              Command="{Binding OnNavigateCommand}" 
                              CommandParameter="NavigationPage/Test1Page"/>
                <Button Text="Go Test 2"  
                              TextColor="White"
                              BackgroundColor="Black" 
                              Command="{Binding OnNavigateCommand}" 
                              CommandParameter="NavigationPage/Test2Page"/>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>


